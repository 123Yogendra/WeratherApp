<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape >
            <stroke android:width="2dp" android:color="@color/gray" />

            <solid android:color="@android:color/transparent" />

            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />

            <gradient android:angle="270" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />

            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape >

            <stroke android:width="2dp" android:color="@color/gray_dark" />

            <solid android:color="@android:color/transparent" />

            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />

            <gradient android:angle="270" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />

            <corners android:radius="5dp" />
        </shape>
    </item>


    <item >
        <shape >

            <stroke android:width="2dp" android:color="@color/gray" />

            <solid android:color="@android:color/transparent" />

            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />

            <gradient android:angle="270" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />

            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>